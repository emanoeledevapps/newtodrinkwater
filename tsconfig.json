{
  "extends": "@react-native/typescript-config",
  "include": [
    "**/*.ts",
    "**/*.tsx",
    "nativewind-env.d.ts"
  ],
  "exclude": [
    "**/node_modules",
    "**/Pods"
  ],
  "compilerOptions": {
    "baseUrl": "./",
    "paths": {
      "@components": ["src/components"],
      "@hooks": ["src/hooks"],
      "@screens": ["src/screens"],
      "@db": ["src/db"],
      "@contexts": ["src/contexts"],
      "@routes": ["src/routes"],
    }
  }
}